<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <welcome-file-list>
        <welcome-file>views/reservation.jsp</welcome-file>
    </welcome-file-list>
<!--    Index -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.ReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FlightListServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.FlightListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlightListServlet</servlet-name>
        <url-pattern>/flightList</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- Declaration of LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.LoginServlet</servlet-class>
    </servlet>

    <!-- Mapping for LoginServlet -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Home -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Payment -->
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/make_payment</url-pattern>
    </servlet-mapping>

    <!-- Company -->
    <servlet>
        <servlet-name>CompanyAerienneServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.CompanyAerienneServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompanyAerienneServlet</servlet-name>
        <url-pattern>/company</url-pattern>
    </servlet-mapping>

    <!-- Flights -->
    <servlet>
        <servlet-name>FlightServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.FlightServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FlightServlet</servlet-name>
        <url-pattern>/flight</url-pattern>
    </servlet-mapping>

    <!-- Tickets -->
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>com.rimbestprice.rimbestprice.servlets.TicketServlet</servlet-class>
    </servlet>

    <!-- Map the TicketServlet to a URL pattern -->
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>

</web-app>